<label class="swap swap-flip">
  <input type="checkbox" />

  <div class="swap-on">
    <div class="w-96 h-48 <%= render "shared/plot_card_color", { plot: @plot } %> m-2 shadow-xl ">
      <div class="flex">
        <div class="mx-3 mt-1 flex-1 border-b border-slate-700">Edit? or Delete!</div>
      </div>
      <div class="absolute bottom-0 my-6 mx-4 z-10 flex"> 
        <div class="ml-20 flex-1 hover:animate-pulse animate-bounce"><label for="edit-modal-<%=character.id%>", class="bi bi-pencil-square text-6xl hover:cursor-pointer"></div>
        <label for="delete-modal-<%=character.id%>", class="ml-20 bi bi-trash text-6xl hover:animate-pulse animate-bounce hover:cursor-pointer">
      </div>
    </div>
  </div>

  <div class="swap-off">
    <div class="w-96 h-48 <%= render "shared/plot_card_color", { plot: @plot } %> my-2 shadow-xl ">
      <div class="grid grid-cols-10">
        <div class="col-span-2 border h-48 border-color-natural"></div>
        <div class="col-span-8">
          <div class="my-1 pl-2 text-2xl font-semibold border-b border-slate-700 break-all"><%= truncate(character.name, length: 14, omission: '...') %></div>
          <div class="text-sm pl-2 break-all"><%= simple_format(h(character.body)) %></div>
        </div>
      </div>
    </div>
  </div>

</label>


<input type="checkbox" id="edit-modal-<%= character.id %>" class="modal-toggle" />
<label for="edit-modal-<%= character.id %>" class="modal cursor-pointer">
  <label class="modal-box relative" for="">
    <label for="edit-modal-<%= character.id %>" class="btn btn-sm btn-circle absolute right-2 top-2">✕</label>
    <%= form_with model: character, local: true do |f| %>
      <div class="text-xl border-b border-gray-500 ">登場人物を更新する</div>
      <div class="grid grid-cols-1">
        <%= f.label :名前, class: 'my-1 text-xl' %>
        <%= f.text_field :name, class: 'my-1 input input-bordered input-secondary md:input-md input-lg w-full max-w-full', placeholder: "名前を入力" %>
        <%= f.label :登場人物の内容, class: 'my-1 text-xl' %>
        <%= f.text_area :body, class: 'my-1 textarea textarea-secondary md:textarea-md textarea-lg w-full max-w-full h-24',  placeholder: "内容を入力" %>
        <%= f.submit '更新する', class: 'btn text-gray-100 bg-gray-900 my-2'  %>
        </div>
    <% end %>
  </label>
</label>

<input type="checkbox" id="delete-modal-<%= character.id %>" class="modal-toggle" />
<label for="delete-modal-<%= character.id %>" class="modal cursor-pointer">
  <label class="modal-box relative" for="">
    <label for="delete-modal-<%= character.id %>" class="btn btn-sm btn-circle absolute right-2 top-2">✕</label>
    <div class="text-xl font-bold m-2 mb-4 border-b border-gray-500">登場人物を削除。</div>
    <div class="text-sm m-2 my-4">登場人物のデータを削除しても本当によろしいですか？</br>削除後に元に戻すことはできません。ご了承ください。</div>
    <%= button_to "カードを削除する",character_path(character),class: 'btn text-gray-100 bg-gray-900 m-2 right-0', method: :delete %>  
  </label>
</label>