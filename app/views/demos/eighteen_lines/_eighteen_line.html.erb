<div class="mx-4 text-xl border-b border-gray-500"><%= eighteen_line.number %> <%= eighteen_line.name %> <i class="text-xs bi bi-question-circle hover:cursor-pointer" onclick="document.getElementById('<%= eighteen_line.id %>').classList.toggle('hidden')"></i></div>
<div class="mx-4 text-xs hidden" id="<%= eighteen_line.id %>"><%= eighteen_line.explanation %></div>

<label for="my-modal-<%=eighteen_line.id%>", class="cursor-pointer">
  <div class="mx-4 mt-1 mb-5 text-ms font-light break-all <%= render "shared/plot_card_color", { plot: @plot } %>"><%= eighteen_line.body.blank? ? "シーンの内容を入力してください。" : eighteen_line.body %></div>
</label>

<input type="checkbox" id="my-modal-<%=eighteen_line.id%>" class="modal-toggle" />
<label for="my-modal-<%=eighteen_line.id%>" class="modal cursor-pointer">
  <label class="modal-box relative" for="">
    <label for="my-modal-<%=eighteen_line.id%>" class="btn btn-sm btn-circle absolute right-2 top-2">✕</label>
    <%= form_with model: eighteen_line, local: true do |f| %>
      <div class="grid grid-cols-1">
        <div class="text-xl border-b border-gray-500 ">プロットポイントを更新する</div>
        <%= f.label :プロットポイントナンバー, class: 'my-1 text-xl' %>
        <%= f.number_field :number, class: 'my-1 input input-bordered input-secondary md:input-md input-lg w-full max-w-full', placeholder: "シーンナンバー" %>
        <i class="text-xs bi bi-question-circle-fill" onclick="document.getElementById('explanation<%= eighteen_line.id %>').classList.toggle('hidden')">解説を編集する</i>
        <div class="hidden" id="explanation<%= eighteen_line.id %>">
          <%= f.label :プロットポイント, class: 'my-1 text-xl' %>
          <%= f.text_field :name, class: 'my-1 input input-bordered input-secondary md:input-md input-lg w-full max-w-full', placeholder: "タイトルを入力してください。" %>
          <%= f.label :解説, class: 'my-1 text-xl' %>
          <%= f.text_field :explanation, class: 'my-1 input input-bordered input-secondary md:input-md input-lg w-full max-w-full', placeholder: "タイトルを入力してください。" %>
        </div>
        <%= f.label :シーン内容, class: 'my-1 text-xl' %>
        <%= f.text_area :body, class: 'my-1 textarea textarea-secondary md:textarea-sm textarea-lg w-full max-w-full h-24', placeholder: "シーンの内容を入力してください。" %>
        <%= f.submit '更新する', class: 'btn text-gray-100 bg-gray-900 my-2 opacity-50 cursor-not-allowed', disabled: true %>
        デモでは新しくプロットを変更することはできません！</br>アカウント登録をして自分好みのプロットを作成してみませんか？
        <div class="hidden sm:block"><%= link_to "SignUp",new_user_path, class: "btn animate-pulsate-fwd" %></div>
      </div>
    <% end %>
  </label>
</label>