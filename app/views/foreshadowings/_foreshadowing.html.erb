<label for="my-modal-<%= foreshadowing.id %>">
  <div class="carousel-item <%= render "plots/plot_color", { plot: @plot } %> card m-2 h-40 h-40 shadow-xl ">
    <div class="grid grid-cols-1">
      <div class="mx-3 mt-1 font-semibold border-b border-slate-700"><%= foreshadowing.name  %></div>
      <div class="text-sm my-2 ml-4 mx-3"><%= foreshadowing.body %></div>
    </div>
    <div class="absolute inset-x-0 bottom-0 m-3 flex border-t border-slate-700" style="overflow-x: auto; white-space: nowrap;">
      <% foreshadowing.foreshadowing_cards.each do |fc| %>
        <span class="badge badge-outline badge-sm my-2 mr-2">
          scene<%= fc.card.scene %>
        </span>
      <% end %>
    </div>
  </div>
</label>


<input type="checkbox" id="my-modal-<%= foreshadowing.id %>" class="modal-toggle" />
<label for="my-modal-<%= foreshadowing.id %>" class="modal cursor-pointer">
  <label class="modal-box relative" for="">
    <label for="my-modal-<%= foreshadowing.id %>" class="btn btn-sm btn-circle absolute right-2 top-2">✕</label>
    <%= form_with model: foreshadowing, local: true do |f| %>
      <div class="text-xl border-b border-gray-500 ">伏線を更新する</div>
      <div class="grid grid-cols-1">
        <%= f.label :タイトル, class: 'my-1 text-xl' %>
        <%= f.text_field :name, class: 'my-1 input input-bordered input-secondary input-md w-full max-w-xl', placeholder: "伏線タイトルを入力" %>
        <%= f.label :伏線の内容, class: 'my-1 text-xl' %>
        <%= f.text_area :body, class: 'my-1 input input-bordered input-secondary input-md h-40 w-full max-w-xl',  placeholder: "内容を入力" %>
        <%= f.submit '更新する', class: 'btn text-gray-100 bg-gray-900 my-2'  %>
      </div>
    <% end %>
  </label>
</label>