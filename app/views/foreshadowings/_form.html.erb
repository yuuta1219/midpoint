<%= form_with model: @foreshadowing, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'input input-ghost w-full max-w-xs', placeholder: "伏線タイトルを入力" %>
    <%= f.label :body %>
    <%= f.text_field :body, class: 'input input-ghost w-full max-w-xs', placeholder: "内容を入力" %>
    <%= f.submit '登録する', class: 'btn btn-ghost' %>
  </div>
<% end %>