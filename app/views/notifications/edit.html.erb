<div class="mx-4">
<%= form_with model: @notification, local: true do |f| %>
  <div class="flex flex-col">
    <%= f.label :記者名, class: 'my-1 text-xl' %>
    <%= f.text_field :name, class: 'my-1 input input-bordered input-secondary md:input-md input-lg w-full max-w-full'%>
    <%= f.label :お知らせタイトル, class: 'my-1 text-xl' %>
    <%= f.text_field :title, class: 'my-1 input input-bordered input-secondary md:input-md input-lg w-full max-w-full'%>
    <%= f.label :お知らせ内容, class: 'my-1 text-xl' %>
    <%= f.text_area :message, class: 'my-1 textarea textarea-secondary md:textarea-md textarea-lg w-full max-w-full h-24'%>
  <%= f.submit 'お知らせを作成する', class: 'btn text-gray-100 bg-gray-900 my-2' %>
  </div>
<% end %>
</div>