<%= render 'shared/login_check' %>
<%= render 'shared/flash_message' %>

<div class="bg-base-200 text-gray-700">
  <div class="flex border-b-4 border-base-300">
    <div class="flex-1 font-light mx-4 m-2 text-4xl drop-shadow-2xl"><%= link_to "パスワードリセット", new_password_reset_path %></div>
  </div>
  <div class="mx-4">
    <%= form_with url: password_resets_path, local: true do |f| %>
      <div class="flex flex-col">
        <%= f.label :メールアドレス, class: 'my-1 text-xl' %>
        <p class="text-sm">パスワードを変更したいメールアドレスを入力してください。</p>
        <%= f.text_field :email, class: 'my-1 input input-bordered input-secondary input-lg md:input-md w-full max-w-full' %>
          <%= f.submit 'パスワードリセットメールを送信', class: 'btn text-gray-100 bg-gray-900 my-2' %>
      </div>
    <% end %>
  </div>
</div>



<%= render 'shared/footer' %>



