<%= render 'shared/login_check' %>

<div class="bg-base-300">
  <div class="flex">
    <h1 class="flex-1 font-light mx-4 text-4xl">Plot List </h1>
    <%= render 'search_form' %>
  </div>
  <div class="overflow-x-auto">
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 2xl:grid-cols-8">
      <%= render @plots %>
    </div>
  </div
</div>

<div class="fixed bottom-0 right-0 m-8 z-20">
  <%= link_to new_plot_path, class: "rounded-full bg-neutral-500 hover:bg-neutral-600 text-white font-bold py-8 px-9 flex items-center justify-center" do %>
    <i class="bi bi-plus-lg " style="font-size: 1.5rem;"></i>
  <% end %>
</div>

<%= render 'shared/footer' %>