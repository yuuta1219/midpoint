<div class='flex flex-wrap'>
  <div class="dropdown">
    <label tabindex="0" class="btn btn-ghost">メニュー</label>
    <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
      <li><%= link_to "plot_home", plots_path %></li>
      <li><%= link_to "plot_2", plot_cards_path(@plot) %></li>
    </ul>
  </div>
  <p class='text-2xl p-2'>タイトル 「 <%= @plot.name %> 」</p>
</div>
<div class="hero screen bg-base-200">
  <div class='grid grid-cols-6 gap-4'>
    <div class='col-span-2'>
      <p class='border-b-4 pb-2 border-indigo-500'>テーマ</p>
      <p class='text-1xl pb-4'><%= @plot.theme %></p>
      <p class='border-b-4 pb-2 border-indigo-500'>ログライン</p>
      <p class='text-1xl pb-4'><%= @plot.one_line %></p>
      <p class='border-b-4 pb-2 border-indigo-500'>メモ</p>
      <p class='text-1xl pb-4'><%= @plot.memo %></p>
    </div>
    <div class='col-span-4'>
      <%= render 'eighteen_lines/form', { plot: @plot, eighteen_line: @eighteen_line } %>
      <%= render @eighteen_lines %>
    </div>
  </div>
</div>